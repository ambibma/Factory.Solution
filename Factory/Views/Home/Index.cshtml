@{
  Layout = "_Layout";
}
 
 @using Factory.Models;

 <h1>Welcome to Dr.Sillystringz Factory!</h1>
 <hr>

 <h4>Engineers</h4>
 @if (Model["engineers"].Length == 0)
 {
    <p>No Engineers have been added yet!</p>
 }
 <ul>
  @foreach (Engineer engie in Model["engineers"])
  {
    <li>@Html.ActionLink(@engie.Name, "Details", "Engineers", new{id = @engie.EngineerId})</li>
  }
 </ul>

 <h4> Machines </h4>
 @if (Model["machines"].Length == 0)
 {
   <p>No Machines have been added yet!</p>
 }
 <ul>
    @foreach (Machine mech in Model["machines"])
    {
      <li>@Html.ActionLink(@mech.Name, "Details", "Machines", new{id = @mech.MachineId})</li>
    }
 </ul>

 <hr>

 <p>@Html.ActionLink("Manage Machines", "Index", "Machines")</p> 
<p>@Html.ActionLink("Manage Engineers", "Index", "Engineers")</p>